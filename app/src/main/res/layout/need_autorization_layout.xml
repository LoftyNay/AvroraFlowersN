<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/needAutorizationBlock"
        android:visibility="visible"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvNeedAutorization"
            android:text="@string/autorization_message"
            android:gravity="center_horizontal"
            android:paddingTop="40dp"
            android:textSize="20sp"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginEnd="32dp"
            android:layout_marginStart="32dp"/>

    <com.google.android.material.button.MaterialButton
            android:id="@+id/buttonNeedAutorization"
            android:text="@string/login_nf"
            android:textSize="16sp"
            android:textAllCaps="true"
            android:layout_width="180dp"
            android:layout_height="54dp"
            style="@style/ButtonColorFill"
            app:layout_constraintTop_toBottomOf="@+id/tvNeedAutorization"
            app:cornerRadius="4dp"
            android:layout_marginTop="24dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>
</androidx.constraintlayout.widget.ConstraintLayout>