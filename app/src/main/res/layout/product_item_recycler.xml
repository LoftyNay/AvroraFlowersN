<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/productsCardItem"
        android:layout_width="match_parent"
        android:layout_height="180dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/imageItemProductRecycler"
                android:src="@drawable/avf_lg"
                android:layout_width="0dp"
                android:layout_height="0dp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toStartOf="@+id/guideline"
                app:layout_constraintBottom_toBottomOf="parent"/>

        <TextView
                android:text="Лизиантус"
                android:textStyle="bold"
                android:id="@+id/textViewHeadProductsRecycler"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:paddingRight="10dp"
                android:paddingBottom="3dp"
                android:paddingTop="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginEnd="16dp"/>

        <TextView
                android:text="бело-розовый"
                android:id="@+id/textViewColorProductsRecycler"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:layout_width="0dp"
                android:paddingRight="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="@+id/guideline" android:layout_marginEnd="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewHeadProductsRecycler"/>

        <TextView
                android:text="Упаковка"
                android:id="@+id/textViewPackProductsRecycler"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:paddingRight="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginTop="14dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewColorProductsRecycler" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline2"/>

        <androidx.appcompat.widget.AppCompatSpinner
                android:id="@+id/productsPackSpinner"
                android:background="@drawable/spinner_outline"
                android:spinnerMode="dropdown"
                android:layout_width="0dp"
                android:layout_height="34dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewColorProductsRecycler"
                app:layout_constraintStart_toStartOf="@+id/guideline2">
        </androidx.appcompat.widget.AppCompatSpinner>


        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline"
                app:layout_constraintGuide_begin="172dp"
                android:orientation="vertical"
        />

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline2"
                app:layout_constraintGuide_begin="290dp"
                android:orientation="vertical"
        />

        <TextView
                android:text="Заказ"
                android:id="@+id/textViewOrderProductsRecycler"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:paddingRight="10dp"
                android:layout_marginStart="15dp"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                app:layout_constraintTop_toTopOf="@+id/guideline3" android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/productsMinusInCardButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/products_fragment_buttons_background"
                android:src="@drawable/ic_remove_in_card"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderProductsRecycler"
                app:layout_constraintStart_toStartOf="@+id/guideline"
                android:layout_marginStart="15dp"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp" android:layout_marginTop="4dp"/>

        <TextView
                android:id="@+id/productsCountInCard"
                android:text="5"
                android:gravity="center_vertical|center_horizontal"
                android:background="@drawable/products_fragment_buttons_background"
                android:textColor="@color/cardview_dark_background"
                android:enabled="false"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:layout_marginStart="3dp"
                android:layout_marginBottom="10dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderProductsRecycler"
                app:layout_constraintStart_toEndOf="@+id/productsMinusInCardButton" android:layout_marginTop="4dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/productsPlusInCardButton"
                android:background="@drawable/products_fragment_buttons_background"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:src="@drawable/ic_add_in_card"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintStart_toEndOf="@+id/productsCountInCard" android:layout_marginStart="3dp"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderProductsRecycler"
                android:layout_marginTop="4dp"/>

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/productsAddInCardButton"
                android:layout_width="40dp"
                android:layout_height="40dp"
                android:background="@drawable/button_add_to_card_outline"
                android:src="@drawable/ic_card_plus"
                app:layout_constraintTop_toBottomOf="@+id/textViewOrderProductsRecycler"
                app:layout_constraintBottom_toBottomOf="parent"
                android:layout_marginBottom="10dp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginEnd="16dp" android:layout_marginTop="4dp"/>

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/guideline3"
                app:layout_constraintGuide_begin="97dp"
                android:orientation="horizontal"
                app:layout_constraintTop_toTopOf="parent"
        />

    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>