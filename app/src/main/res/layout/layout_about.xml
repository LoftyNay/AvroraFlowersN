<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent" android:layout_height="match_parent">

    <include layout="@layout/toolbar"
             android:layout_height="?attr/actionBarSize"
             android:layout_width="match_parent" android:id="@+id/toolbar"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/avf_lg"
            android:layout_width="130dp"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/toolbar" android:id="@+id/appCompatImageView5"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_avf_about_company"
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:id="@+id/appCompatImageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView5"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="   Более 20 лет компания «AVRORA FLOWERS LTD» занимается оптовыми поставками свежесрезанных цветов и декоративной зелени из Израиля и других стран. Сегодня «AVRORA FLOWERS LTD» является крупнейшим поставщиком цветов и зелени из Израиля в страны СНГ и восточной европы. Благодаря многолетнему успешному опыту работы на рынке компания «AVRORA» выбрала себе в партнеры лучшие израильские плантации, которые производят высококачественную продукцию. Из Израиля компания поставляет гипсофилу, эустому (лизиантус), герберу, аспарагус, аспидистру, солидаго, статицу, рускус, и прочий разнообразный ассортимент цветов и декоративной зелени. Мы также сотрудничаем с лучшими плантациями Израиля и других стран, доставляя своим партнерам высококачественный товар."
            android:padding="15dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:justificationMode="inter_word"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4"/>

</androidx.constraintlayout.widget.ConstraintLayout>