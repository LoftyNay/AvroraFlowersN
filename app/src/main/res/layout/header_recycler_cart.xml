<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:paddingBottom="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="@string/amsterdam"
            android:layout_marginStart="13dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/appCompatTextView"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/tvDateCart"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toStartOf="@+id/datePickButtonCart"
            android:layout_marginEnd="16dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="15dp"/>

    <androidx.appcompat.widget.AppCompatImageButton
            android:id="@+id/datePickButtonCart"
            android:src="@drawable/ic_date_pick_cart"
            android:background="?android:selectableItemBackground"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="13dp" android:layout_marginTop="13dp"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Продукт"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp" android:id="@+id/appCompatTextView2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/appCompatTextView3"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Упаковка"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
            android:id="@+id/appCompatTextView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/appCompatTextView4"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Кол-во\nкоробок"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
            android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/appCompatTextView4"/>

</androidx.constraintlayout.widget.ConstraintLayout>