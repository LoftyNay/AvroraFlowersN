<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:orientation="vertical"
        android:paddingTop="15dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Продукт"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="13dp" android:id="@+id/appCompatTextView2"
            android:layout_marginEnd="8dp" app:layout_constraintEnd_toStartOf="@+id/appCompatTextView3"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Упаковок"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
            android:id="@+id/appCompatTextView3" android:layout_marginEnd="8dp"
            app:layout_constraintEnd_toStartOf="@+id/appCompatTextView4"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:text="Кол-во"
            android:textSize="13sp"
            android:padding="5dp"
            android:gravity="center_horizontal|center_vertical"
            android:textStyle="bold"
            android:background="@color/color_light_gray"
            android:layout_width="80dp"
            android:layout_height="50dp"
            android:layout_marginTop="15dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatTextView"
            android:layout_marginEnd="13dp" app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/appCompatTextView4"/>

</androidx.constraintlayout.widget.ConstraintLayout>