<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto" android:layout_width="match_parent"
        android:layout_height="match_parent">

    <include layout="@layout/toolbar"
             android:layout_height="?attr/actionBarSize"
             android:layout_width="match_parent" android:id="@+id/toolbar"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:src="@drawable/ic_avrora_contacts"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/appCompatImageView4"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toTopOf="@+id/toolbar" app:layout_constraintVertical_bias="0.39"/>

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" android:layout_marginTop="32dp"
            app:layout_constraintTop_toBottomOf="@+id/appCompatImageView4" android:id="@+id/constraintLayout">

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_phone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView" android:id="@+id/appCompatImageView2"
                android:layout_marginTop="10dp"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumb1"
                android:textSize="16sp"
                android:autoLink="phone"
                android:text="+972-88-677-363"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView" android:layout_marginStart="8dp"
                app:layout_constraintTop_toTopOf="parent" android:layout_marginTop="8dp"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_phone"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="8dp"
                android:id="@+id/appCompatImageView"
                app:layout_constraintTop_toTopOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvNumb2"
                android:textSize="16sp"
                android:autoLink="phone"
                android:text="+972-544-418-254"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp" app:layout_constraintTop_toBottomOf="@+id/tvNumb1"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView2" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/tvMail"/>

        <androidx.appcompat.widget.AppCompatImageView
                android:src="@drawable/ic_mail"
                android:layout_width="36dp"
                android:layout_height="36dp"
                app:layout_constraintTop_toBottomOf="@+id/appCompatImageView2"
                app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
                android:layout_marginTop="10dp" android:id="@+id/appCompatImageView3"/>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvMail"
                android:autoLink="email"
                android:textSize="16sp"
                android:text="avrorzak@netvision.net.il"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                app:layout_constraintStart_toEndOf="@+id/appCompatImageView3" android:layout_marginStart="8dp"
                android:layout_marginBottom="8dp" app:layout_constraintBottom_toBottomOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>