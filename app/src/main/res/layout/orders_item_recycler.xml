<?xml version="1.0" encoding="utf-8"?>
<com.google.android.material.card.MaterialCardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:foreground="?attr/selectableItemBackground"
        app:cardElevation="2dp"
        app:cardCornerRadius="4dp"
        android:id="@+id/ordersCardItem"
        android:layout_width="match_parent"
        android:layout_height="90dp">

    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <TextView
                android:text="Статус"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                android:layout_marginStart="16dp" app:layout_constraintStart_toStartOf="parent"
                android:id="@+id/textView2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/statusOrdersItem" android:layout_marginTop="24dp"/>

        <TextView
                android:text="Упаковка"
                android:id="@+id/statusOrdersItem"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:layout_width="0dp"
                android:layout_marginEnd="8dp"
                app:layout_constraintEnd_toStartOf="@+id/guideline5"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginStart="16dp"
                app:layout_constraintTop_toBottomOf="@+id/textView2"
        />

        <TextView
                android:text="Дата заказа"
                android:textStyle="bold"
                android:layout_height="wrap_content"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginTop="24dp"
                android:id="@+id/textView3"
        />

        <TextView
                android:text="25.02.2019 13-55"
                android:id="@+id/dateOrdersItem"
                android:layout_height="wrap_content"
                android:alpha="0.7"
                android:layout_width="0dp"
                app:layout_constraintStart_toStartOf="@+id/guideline5"
                app:layout_constraintTop_toBottomOf="@+id/textView3"
        />

        <androidx.constraintlayout.widget.Guideline
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/guideline5"
                app:layout_constraintGuide_begin="233dp"
                android:orientation="vertical"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>